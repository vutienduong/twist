<div class='comment row'>
  <div class='col-md-1 avatar'>
    <%= avatar(comment.user) %>
  </div>
  <div class='col-md-11 comment-box'>
    <div class='title'>
      <strong><%= comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago</strong><br>
    </div>

    <div class='body'>
      <%= markdown comment.text %>
    </div>
  </div>
</div>
