// Increment the notes counter in the left-hand "sidebar"
notes_count_link = $('#note_button_<%= params[:element_id] %> a')
notes_count = parseInt(notes_count_link.text());
notes_count++;
if (notes_count == 1) {
  text = "1 note +";
}
else {
  text = notes_count + " notes +";
}
notes_count_link.text(text);

container = $('#notes_container_<%= params[:element_id] %>');
container.html("<strong>Thanks for the note!</strong>");
container.fadeOut(5000);