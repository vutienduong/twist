.row
  .col-md-7.content
    %h1= "#{current_account.name} Users"
    = link_to "Invite User", new_invitation_path, class: "btn btn-primary"

    %table.table.table-striped#users
      %thead
        %th User
        %th

      %tbody
        %tr
          %td= current_account.owner.email
          %td
        - current_account.users.each do |user|
          %tr
            %td= user.email
            %td
              = link_to "Remove", user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure you want to remove this user?' },
                class: "btn btn-danger"

